/* ===== 主题与基础变量 ===== */
page {
  --bg-grad-start: #f7f9fc;
  --bg-grad-end: #eef2f7;
  --text-strong: #1f2937;
  --text: #374151;
  --text-subtle: #6b7280;

  --brand: rgb(6, 65, 78);   /* 企业主色（深蓝绿） */
  --brand-light: rgba(6, 65, 78, 0.8);  /* 企业色浅色版 */
  --brand-2: #0891b2;        /* 辅助渐变色（协调的蓝色） */
  --success: #10b981;
  --info: #0ea5e9;
  --warning: #f59e0b;
  --danger: #ef4444;

  --card-bg: #ffffff;
  --border: #eceff5;

  --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.06);
  --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.10);
  --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.14);

  --radius: 16rpx;
  --radius-lg: 20rpx;
}

/* ===== 页面容器与头图 ===== */
.container {
  padding: 24rpx 24rpx 140rpx 24rpx; /* 底部增加空间避免被tabBar遮挡 */
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
  box-sizing: border-box;
}

.hero {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 44rpx 24rpx;
  background: linear-gradient(180deg, rgba(6, 65, 78, 0.08) 0%, rgba(255,255,255,1) 100%),
              var(--card-bg);
  border-radius: calc(var(--radius-lg) + 4rpx);
  box-shadow: var(--shadow-md);
  border: 2rpx solid rgba(6, 65, 78, 0.15);
}

.title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--brand); /* 降级方案，确保颜色显示 */
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-subtle);
}

/* ===== 通用分区标题 ===== */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-strong);
  margin: 28rpx 8rpx 20rpx;
  position: relative;
}
.section-title::before {
  content: '';
  position: absolute;
  left: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  border-radius: 3rpx;
}

/* ===== 会员状态卡片 ===== */
.membership-status { margin-bottom: 28rpx; }

.status-card {
  display: flex; align-items: center; justify-content: space-between;
  padding: 28rpx;
  border-radius: var(--radius-lg);
  background: var(--card-bg);
  box-shadow: var(--shadow-sm);
}

.status-card.premium {
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  color: #fff;
  border: 1rpx solid rgba(6, 65, 78, 0.2);
}

.status-card.free.bordered { border: 1rpx solid var(--border); }

.glass { backdrop-filter: blur(8rpx); }

.status-info { display: flex; align-items: center; gap: 20rpx; flex: 1; }
.status-icon { font-size: 52rpx; line-height: 1; }

.status-title { font-size: 32rpx; font-weight: 800; }
.status-desc { font-size: 24rpx; opacity: .9; }

.status-action { margin-left: 16rpx; }

.status-btn {
  border: none; border-radius: 999rpx; padding: 16rpx 32rpx; font-size: 24rpx;
  transition: transform .08s ease, opacity .08s ease;
}
.status-btn:active { transform: scale(.98); opacity: .9; }
.primary { background: var(--brand); color: #fff; }
.ghost { background: rgba(255,255,255,.2); color: #fff; border: 1rpx solid rgba(255,255,255,.35); }
.danger { background: var(--danger); color: #fff; }

/* ===== 栅格与徽标 ===== */
.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.span-2 { grid-column: span 2; }

.chip {
  position: absolute; right: 24rpx; top: 24rpx;
  padding: 6rpx 16rpx; border-radius: 999rpx;
  font-size: 20rpx; font-weight: 700; letter-spacing: 1rpx;
  box-shadow: var(--shadow-sm);
}
.chip-green { background: rgba(16,185,129,.12); color: #059669; border: 1rpx solid rgba(16,185,129,.25); }
.chip-blue  { background: rgba(14,165,233,.12); color: #0284c7; border: 1rpx solid rgba(14,165,233,.25); }
.chip-purple{ background: rgba(139,92,246,.12); color: #7c3aed; border: 1rpx solid rgba(139,92,246,.25); }

/* ===== 年级卡片（响应式） ===== */
.quick-start { margin-bottom: 24rpx; }

.grade-cards { position: relative; }

.grade-card {
  position: relative;
  display: flex; align-items: center; gap: 22rpx;
  padding: 28rpx;
  background: var(--card-bg);
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border);
  transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
}
.grade-card:hover {
  border-color: rgba(6, 65, 78, 0.3);
}
.grade-card:active { transform: translateY(2rpx) scale(.99); box-shadow: var(--shadow-md); }

.card-icon { font-size: 60rpx; }
.card-content { flex: 1; }
.card-title { font-size: 32rpx; font-weight: 800; color: var(--text-strong); margin-bottom: 4rpx; }
.card-subtitle { font-size: 24rpx; color: var(--text-subtle); }

/* ===== 学习工具 ===== */
.tools-section { margin-bottom: 24rpx; }

.tools-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx;
}
.tool-item {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  padding: 30rpx 20rpx;
  background: var(--card-bg);
  border-radius: var(--radius);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
}
.tool-item:hover {
  border-color: rgba(6, 65, 78, 0.3);
}
.tool-item:active { transform: translateY(2rpx) scale(.98); box-shadow: var(--shadow-md); }
.tool-icon { font-size: 52rpx; margin-bottom: 10rpx; }
.tool-name { font-size: 28rpx; color: var(--text); font-weight: 700; }

/* ===== 历史记录 ===== */
.history-section { margin-bottom: 28rpx; }

.section-header {
  display: flex; justify-content: space-between; align-items: center;
  padding: 0 8rpx;
}
.clear-btn.ghost {
  background: transparent; color: var(--text-subtle);
  border: 1rpx solid var(--border); border-radius: 999rpx;
  padding: 10rpx 20rpx; font-size: 24rpx;
}
.clear-btn:active { opacity: .85; }

.history-list {
  background: var(--card-bg);
  border-radius: var(--radius);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.history-item {
  position: relative;
  display: flex; align-items: center; justify-content: space-between;
  padding: 26rpx 28rpx 26rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
}
.history-item:last-child { border-bottom: none; }
.history-dot {
  position: absolute; left: 18rpx; width: 10rpx; height: 10rpx; border-radius: 50%;
  background: var(--brand);
  box-shadow: 0 0 0 6rpx rgba(6, 65, 78, 0.15);
}
.history-info { flex: 1; }
.history-level { font-size: 28rpx; color: var(--text-strong); font-weight: 800; margin-bottom: 2rpx; }
.history-score { font-size: 24rpx; color: var(--text); margin-bottom: 2rpx; }
.history-date { font-size: 22rpx; color: var(--text-subtle); }

.delete-btn { border: none; border-radius: 10rpx; padding: 12rpx 18rpx; font-size: 24rpx; }
.delete-btn:active { opacity: .9; }

/* ===== 升级提示 ===== */
.upgrade-card {
  padding: 30rpx;
  text-align: center;
  background: linear-gradient(180deg, #ffffff, #fbfbff);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
}
.upgrade-title { font-size: 32rpx; color: var(--text-strong); font-weight: 800; margin-bottom: 8rpx; }
.upgrade-desc { font-size: 26rpx; color: var(--text-subtle); margin-bottom: 6rpx; }
.upgrade-btn { margin-top: 18rpx; border-radius: 12rpx; font-weight: 800; padding: 16rpx 40rpx; }

/* ===== 深色模式（可选） ===== */
@media (prefers-color-scheme: dark) {
  page {
    --bg-grad-start: #0f172a; --bg-grad-end: #111827;
    --card-bg: #0b1220; --border: #1f2937;
    --text-strong: #e5e7eb; --text: #d1d5db; --text-subtle: #9ca3af;
    --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.4);
    --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.5);
    --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.6);
  }
  .ghost { border-color: rgba(255,255,255,.25); }
  .history-item { border-bottom-color: #182030; }
}