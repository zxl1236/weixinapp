/* 支付页面样式 - 背单词应用风格 */
.container {
  padding: 32rpx 24rpx;
  /* 使用统一的淡雅渐变背景 */
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
  min-height: 100vh;
}

/* 会员状态卡片 - 薄荷绿主题 */
.membership-card {
  margin-bottom: 40rpx;
  padding: 40rpx;
  border-radius: var(--radius-xl);
  background: var(--gradient-primary);
  box-shadow: var(--shadow-medium);
  color: var(--text-white);
  position: relative;
  overflow: hidden;
}

.membership-card.premium {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  box-shadow: 0 16rpx 40rpx rgba(255, 149, 0, 0.25);
}

.membership-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.membership-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 1;
  position: relative;
}

.membership-icon {
  font-size: 50rpx;
  width: 80rpx;
  text-align: center;
}

.membership-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.membership-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 特权对比区域 */
.privilege-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.privilege-table {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.privilege-header {
  display: flex;
  background: #f8f9fa;
  padding: 25rpx 20rpx;
  font-weight: bold;
  color: #666;
  font-size: 24rpx;
}

.privilege-row {
  display: flex;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.privilege-row:last-child {
  border-bottom: none;
}

.privilege-item-name {
  flex: 2;
  color: #333;
  font-size: 26rpx;
}

.privilege-free,
.privilege-premium {
  flex: 1;
  text-align: center;
}

.privilege-value {
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: inline-block;
}

.privilege-value.enabled {
  background: #e8f5e8;
  color: #2e7d2e;
}

.privilege-value.disabled {
  background: #ffeaea;
  color: #c53030;
}

/* 套餐选择区域 */
.plan-section {
  margin-bottom: 30rpx;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-card {
  background: var(--card-bg);
  border-radius: var(--radius-large);
  padding: 32rpx;
  box-shadow: var(--shadow-light);
  border: 2rpx solid rgba(76, 217, 100, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.plan-card.selected {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-medium);
  transform: scale(1.02);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.plan-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.plan-badge {
  background: linear-gradient(45deg, #ff6b6b, #ffa500);
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.plan-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.price-main {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.price-unit {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 5rpx;
}

.plan-original {
  font-size: 22rpx;
  color: var(--text-light);
  text-decoration: line-through;
  margin-bottom: 10rpx;
}

.plan-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 支付区域 */
.payment-section {
  margin-bottom: 30rpx;
}

.payment-summary {
  background: var(--card-bg);
  border-radius: var(--radius-large);
  padding: 28rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-light);
  border: 1rpx solid rgba(76, 217, 100, 0.1);
}

.summary-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.summary-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.pay-btn {
  width: 100%;
  background: var(--gradient-button);
  color: var(--text-white);
  border: none;
  border-radius: var(--radius-xl);
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-medium);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.pay-btn:not([disabled]):active {
  transform: scale(0.98);
  box-shadow: var(--shadow-heavy);
}

.pay-btn[disabled] {
  background: var(--text-light);
  box-shadow: none;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.loading-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.payment-tips {
  padding: 0 20rpx;
}

.tip-item {
  font-size: 22rpx;
  color: #666;
  line-height: 2;
  padding-left: 10rpx;
}

/* 续费区域 */
.renewal-section {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.renewal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.renewal-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.renewal-btn {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.3);
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stats-item {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 22rpx;
  color: #666;
}

/* FAQ区域 */
.faq-section {
  margin-bottom: 30rpx;
}

.faq-list {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.faq-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.faq-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.faq-arrow {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.faq-arrow.expanded {
  transform: rotate(180deg);
}

.faq-answer {
  padding: 0 25rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.faq-answer.show {
  padding: 0 25rpx 25rpx 25rpx;
}
