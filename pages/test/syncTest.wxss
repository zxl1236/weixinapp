/* 数据同步测试页面样式 */

.container {
  padding: 20rpx;
  /* 使用统一的淡雅渐变背景 */
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #667eea;
}

/* 统计部分 */
.stats-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border: 2rpx solid #e8f0fe;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.grade-progress {
  border-top: 2rpx solid #eee;
  padding-top: 20rpx;
}

.grade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.grade-name {
  font-weight: bold;
  color: #333;
  font-size: 28rpx;
}

.grade-stats {
  font-size: 24rpx;
  color: #666;
}

/* 测试控制部分 */
.test-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.test-btn {
  height: 88rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn.primary[disabled] {
  background: #ccc;
  color: #999;
}

.test-btn.secondary {
  background: linear-gradient(135deg, #36d1dc 0%, #5b86e5 100%);
  color: white;
}

.test-btn.danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
}

/* 测试结果部分 */
.results-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.result-summary {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.summary-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 15rpx;
  border: 2rpx solid;
}

.summary-item.success {
  background: #f0f9ff;
  border-color: #4ade80;
  color: #16a34a;
}

.summary-item.fail {
  background: #fef2f2;
  border-color: #f87171;
  color: #dc2626;
}

.summary-item.total {
  background: #f8fafc;
  border-color: #64748b;
  color: #334155;
}

.summary-item.rate {
  background: #fef3c7;
  border-color: #fbbf24;
  color: #d97706;
}

.summary-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.summary-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  background: #f1f5f9;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  color: #475569;
  font-size: 28rpx;
}

/* 测试项目列表 */
.test-list {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.test-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  border: 2rpx solid;
}

.test-item.passed {
  background: #f0fdf4;
  border-color: #bbf7d0;
}

.test-item.failed {
  background: #fef2f2;
  border-color: #fecaca;
}

.test-status {
  margin-right: 15rpx;
  padding-top: 5rpx;
}

.status-icon {
  font-size: 32rpx;
}

.test-content {
  flex: 1;
}

.test-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.test-message {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 存储信息 */
.storage-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.storage-info {
  background: #f8fafc;
  border-radius: 15rpx;
  padding: 20rpx;
}

.storage-text {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 10rpx;
}
