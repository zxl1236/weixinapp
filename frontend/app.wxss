page {
  --bg-grad-start: #f7f9fc;
  --bg-grad-end: #eef2f7;
  --text-strong: #1f2937;
  --text: #374151;
  --text-subtle: #6b7280;

  /* ğŸ¨ ä¼ä¸šè‰²å½©ä¸»é¢˜ */
  --brand: rgb(6, 65, 78);           /* ä¼ä¸šä¸»è‰² */
  --brand-light: rgba(6, 65, 78, 0.8);   /* æµ…è‰²å˜ä½“ */
  --brand-lighter: rgba(6, 65, 78, 0.15); /* æ›´æµ…èƒŒæ™¯ */
  --brand-gradient: linear-gradient(135deg, rgb(6, 65, 78) 0%, rgb(8, 85, 102) 100%); /* æ¸å˜ */
  --brand-2: rgb(8, 85, 102);        /* è¾…åŠ©æ¸å˜è‰² */
  --success: #10b981;
  --info: #0ea5e9;
  --warning: #f59e0b;
  --danger: #ef4444;

  --card-bg: #ffffff;
  --border: #eceff5;

  --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.06);
  --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.10);
  --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.14);

  --radius: 16rpx;
  --radius-lg: 20rpx;

  /* åº”ç”¨ç»Ÿä¸€çš„æ·¡é›…æ¸å˜èƒŒæ™¯ */
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* å…¨å±€å®¹å™¨æ ·å¼ */
.container {
  padding: 24rpx;
  min-height: 100vh;
  background: transparent; /* ä½¿ç”¨é¡µé¢èƒŒæ™¯ */
}

/* é€šç”¨å¡ç‰‡æ ·å¼ */
.card {
  background: var(--card-bg);
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
  border: 1rpx solid var(--border);
}

/* é€šç”¨æŒ‰é’®æ ·å¼ */
.btn {
  border-radius: var(--radius);
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: transform .08s ease, opacity .08s ease;
}

.btn:active {
  transform: scale(.98);
  opacity: .9;
}

.btn-primary {
  background: var(--brand);
  color: white;
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: var(--card-bg);
  color: var(--text);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
}

/* æ–‡å­—æ ·å¼ */
.title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-strong);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-subtle);
  margin-bottom: 20rpx;
}

.text-muted {
  color: var(--text-subtle);
  font-size: 24rpx;
}

/* ğŸ¨ ä¼ä¸šè‰²å½©é€šç”¨ç»„ä»¶æ ·å¼ */
.brand-btn {
  background: var(--brand-gradient);
  color: white;
  border: none;
  border-radius: var(--radius);
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(6, 65, 78, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.brand-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 3rpx 12rpx rgba(6, 65, 78, 0.35);
}

.brand-card {
  background: linear-gradient(135deg, var(--brand-lighter) 0%, rgba(255,255,255,0.9) 100%);
  border: 2rpx solid var(--brand-lighter);
  border-radius: var(--radius-lg);
  box-shadow: 0 8rpx 24rpx rgba(6, 65, 78, 0.12);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.brand-text {
  color: var(--brand);
  font-weight: 600;
}

.brand-accent {
  background: var(--brand-lighter);
  color: var(--brand);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.brand-border {
  border-left: 4rpx solid var(--brand);
  padding-left: 16rpx;
}

.brand-gradient-text {
  background: var(--brand-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  /* é™çº§æ–¹æ¡ˆ */
  color: var(--brand);
}

/* æ·±è‰²æ¨¡å¼æ”¯æŒ */
@media (prefers-color-scheme: dark) {
  page {
    --bg-grad-start: #0f172a;
    --bg-grad-end: #111827;
    --card-bg: #0b1220;
    --border: #1f2937;
    --text-strong: #e5e7eb;
    --text: #d1d5db;
    --text-subtle: #9ca3af;
    --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.4);
    --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.5);
    --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.6);
  }
}
