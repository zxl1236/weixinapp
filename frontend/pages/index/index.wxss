.favorite-item:hover { border-color: rgba(6, 65, 78, 0.3); }
.favorite-item:active { transform: translateY(2rpx) scale(.98); box-shadow: var(--shadow-md); }

.favorite-icon { font-size: 40rpx; margin-bottom: 8rpx; }
.favorite-name { font-size: 24rpx; color: var(--text); font-weight: 700; text-align: center; }

/* 最近学习 */
.recent-learning { margin-bottom: 24rpx; }

.recent-list { background: var(--card-bg); border-radius: var(--radius); border: 1rpx solid var(--border); box-shadow: var(--shadow-sm); overflow: hidden; }
.recent-item {
  display: flex; align-items: center; justify-content: space-between;
  padding: 24rpx 28rpx; border-bottom: 1rpx solid #f3f4f6;
  transition: background-color .12s ease;
}
.recent-item:last-child { border-bottom: none; }
.recent-item:active { background-color: #f8fafc; }

.recent-info { flex: 1; }
.recent-grade { font-size: 28rpx; color: var(--text-strong); font-weight: 700; margin-bottom: 4rpx; }
.recent-progress { font-size: 24rpx; color: var(--text-subtle); }
.recent-time { font-size: 22rpx; color: var(--text-subtle); }

/* 更多按钮 */
.more-btn {
  background: transparent; color: var(--brand); border: 1rpx solid var(--brand);
  border-radius: 999rpx; padding: 8rpx 16rpx; font-size: 22rpx;
}
.more-btn:active { opacity: .8; }

/* 切换按钮区域 */
.toggle-section {
  display: flex; justify-content: center; margin: 20rpx 0;
}
.toggle-btn {
  background: var(--card-bg); color: var(--text-subtle); border: 1rpx solid var(--border);
  border-radius: 999rpx; padding: 12rpx 24rpx; font-size: 24rpx;
}
.toggle-btn:active { opacity: .8; }

/* ===== 深色模式（可选） ===== */
@media (prefers-color-scheme: dark) {
  page {
    --bg-grad-start: #0f172a; --bg-grad-end: #111827;
    --card-bg: #0b1220; --border: #1f2937;
    --text-strong: #e5e7eb; --text: #d1d5db; --text-subtle: #9ca3af;
    --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.4);
    --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.5);
    --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.6);
  }
  .ghost { border-color: rgba(255,255,255,.25); }
  .history-item { border-bottom-color: #182030; }
  .recent-item { border-bottom-color: #1f2937; }
  .recent-item:active { background-color: #1f2937; }
}