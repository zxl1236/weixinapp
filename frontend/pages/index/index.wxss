.ghost { background: rgba(255,255,255,.2); color: #fff; border: 1rpx solid rgba(255,255,255,.35); }
.danger { background: var(--danger); color: #fff; }



/* ===== 学习工具 ===== */
.tools-section { margin-bottom: 24rpx; }

.tools-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx;
}
.tool-item {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  padding: 30rpx 20rpx;
  background: var(--card-bg);
  border-radius: var(--radius);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
}
.tool-item:hover {
  border-color: rgba(6, 65, 78, 0.3);
}
.tool-item:active { transform: translateY(2rpx) scale(.98); box-shadow: var(--shadow-md); }
.tool-icon { font-size: 52rpx; margin-bottom: 10rpx; }
.tool-name { font-size: 28rpx; color: var(--text); font-weight: 700; }

/* ===== 历史记录 ===== */
.history-section { margin-bottom: 28rpx; }

.section-header {
  display: flex; justify-content: space-between; align-items: center;
  padding: 0 8rpx;
}
.clear-btn.ghost {
  background: transparent; color: var(--text-subtle);
  border: 1rpx solid var(--border); border-radius: 999rpx;
  padding: 10rpx 20rpx; font-size: 24rpx;
}
.clear-btn:active { opacity: .85; }

.history-list {
  background: var(--card-bg);
  border-radius: var(--radius);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.history-item {
  position: relative;
  display: flex; align-items: center; justify-content: space-between;
  padding: 26rpx 28rpx 26rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
}
.history-item:last-child { border-bottom: none; }
.history-dot {
  position: absolute; left: 18rpx; width: 10rpx; height: 10rpx; border-radius: 50%;
  background: var(--brand);
  box-shadow: 0 0 0 6rpx rgba(6, 65, 78, 0.15);
}
.history-info { flex: 1; }
.history-level { font-size: 28rpx; color: var(--text-strong); font-weight: 800; margin-bottom: 2rpx; }
.history-score { font-size: 24rpx; color: var(--text); margin-bottom: 2rpx; }
.history-date { font-size: 22rpx; color: var(--text-subtle); }

.delete-btn { border: none; border-radius: 10rpx; padding: 12rpx 18rpx; font-size: 24rpx; }
.delete-btn:active { opacity: .9; }

/* ===== 升级提示 ===== */
.upgrade-card {
  padding: 30rpx;
  text-align: center;
  background: linear-gradient(180deg, #ffffff, #fbfbff);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
}
.upgrade-title { font-size: 32rpx; color: var(--text-strong); font-weight: 800; margin-bottom: 8rpx; }
.upgrade-desc { font-size: 26rpx; color: var(--text-subtle); margin-bottom: 6rpx; }
.upgrade-btn { margin-top: 18rpx; border-radius: 12rpx; font-weight: 800; padding: 16rpx 40rpx; }

/* ===== 学习统计区域 ===== */
.learning-stats { margin-bottom: 24rpx; }

.stats-card {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.stats-header {
  padding: 24rpx 28rpx 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-strong);
}

.stats-content {
  display: flex;
  padding: 20rpx 28rpx 28rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 0 8rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--brand);
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-subtle);
  font-weight: 500;
}

/* ===== 年级选择区域 ===== */
.grade-selection { margin-bottom: 24rpx; }

.selection-card {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.selection-header {
  padding: 28rpx 28rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.selection-title {
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
}

.selection-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.selection-content {
  padding: 24rpx 28rpx 28rpx;
}

/* ===== 年级下拉框 ===== */
.grade-dropdown { 
  margin-bottom: 24rpx; 
  position: relative;
}

.dropdown-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
}

.dropdown-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-strong);
  white-space: nowrap;
}

.dropdown-selector {
  flex: 1;
  cursor: pointer;
}

.dropdown-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.dropdown-display:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.dropdown-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--brand);
}

.dropdown-arrow {
  font-size: 24rpx;
  color: var(--text-subtle);
  transition: transform 0.2s ease;
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

/* 下拉选项 */
.dropdown-options {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.dropdown-options.show {
  opacity: 1;
  visibility: visible;
}

.dropdown-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.dropdown-menu {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  animation: dropdownSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes dropdownSlideIn {
  0% {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.dropdown-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.dropdown-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.dropdown-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.dropdown-close:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

.dropdown-content {
  max-height: 60vh;
  overflow-y: auto;
  padding: 24rpx;
}

.grade-group {
  margin-bottom: 32rpx;
}

.grade-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  position: relative;
}

.group-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 20rpx;
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  border-radius: 2rpx;
}

.grade-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.grade-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  position: relative;
}

.grade-option:active {
  transform: scale(0.98);
}

.grade-option.active {
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  border-color: var(--brand);
  color: #fff;
}

.grade-option.active .grade-name {
  color: #fff;
  font-weight: 600;
}

.grade-name {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.grade-check {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .grade-options {
    grid-template-columns: 1fr;
  }
  
  .dropdown-menu {
    width: 95%;
  }
}

