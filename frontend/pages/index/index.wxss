/* ===== 全屏授权弹窗 ===== */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.auth-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
}

.auth-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: var(--card-bg);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  animation: authSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes authSlideIn {
  0% {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.auth-header {
  padding: 60rpx 48rpx 40rpx;
  text-align: center;
}

.auth-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  line-height: 1;
}

.auth-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-strong);
  margin-bottom: 16rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: var(--text-subtle);
  line-height: 1.6;
  padding: 0 20rpx;
}

.auth-buttons {
  padding: 0 48rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.auth-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  transition: all 0.2s ease;
}

.auth-btn-primary {
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(6, 65, 78, 0.3);
}

.auth-btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(6, 65, 78, 0.3);
}

.auth-btn-secondary {
  background: #f8f9fa;
  color: var(--text);
  border: 2rpx solid var(--border);
}

.auth-btn-secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}

/* ===== 主题与基础变量 ===== */
page {
  --bg-grad-start: #f7f9fc;
  --bg-grad-end: #eef2f7;
  --text-strong: #1f2937;
  --text: #374151;
  --text-subtle: #6b7280;

  --brand: rgb(6, 65, 78);   /* 企业主色（深蓝绿） */
  --brand-light: rgba(6, 65, 78, 0.8);  /* 企业色浅色版 */
  --brand-2: #0891b2;        /* 辅助渐变色（协调的蓝色） */
  --success: #10b981;
  --info: #0ea5e9;
  --warning: #f59e0b;
  --danger: #ef4444;

  --card-bg: #ffffff;
  --border: #eceff5;

  --shadow-sm: 0 2rpx 10rpx rgba(0,0,0,.06);
  --shadow-md: 0 6rpx 24rpx rgba(0,0,0,.10);
  --shadow-lg: 0 10rpx 36rpx rgba(0,0,0,.14);

  --radius: 16rpx;
  --radius-lg: 20rpx;
}

/* ===== 页面容器与头图 ===== */
.container {
  padding: 24rpx 24rpx 140rpx 24rpx; /* 底部增加空间避免被tabBar遮挡 */
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
  box-sizing: border-box;
}

.hero {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 44rpx 24rpx;
  background: linear-gradient(180deg, rgba(6, 65, 78, 0.08) 0%, rgba(255,255,255,1) 100%),
              var(--card-bg);
  border-radius: calc(var(--radius-lg) + 4rpx);
  box-shadow: var(--shadow-md);
  border: 2rpx solid rgba(6, 65, 78, 0.15);
}

.title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--brand); /* 降级方案，确保颜色显示 */
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  padding-top: 15rpx;
  color: var(--text-subtle);
}

/* ===== 通用分区标题 ===== */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-strong);
  margin: 28rpx 8rpx 20rpx;
  position: relative;
}
.section-title::before {
  content: '';
  position: absolute;
  left: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  border-radius: 3rpx;
}

/* ===== 会员状态卡片 ===== */
.membership-status { margin-bottom: 28rpx; }

