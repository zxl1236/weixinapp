/* ===== 个性化快速访问区域 ===== */
.quick-access { margin-bottom: 24rpx; }

/* 继续学习卡片 */
.continue-learning { margin-bottom: 24rpx; }

.continue-card {
  display: flex; align-items: center; gap: 20rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-2) 100%);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  color: #fff;
  transition: transform .12s ease, box-shadow .12s ease;
  border: 2rpx solid rgba(255,255,255,0.2);
  position: relative;
  overflow: hidden;
}
.continue-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}
.continue-card:active { 
  transform: translateY(2rpx) scale(.99); 
  box-shadow: var(--shadow-md);
}
.continue-card:active::before {
  transform: translateX(100%);
}

.continue-icon { font-size: 60rpx; }
.continue-content { flex: 1; }
.continue-title { font-size: 32rpx; font-weight: 800; margin-bottom: 6rpx; }
.continue-subtitle { font-size: 24rpx; opacity: .9; margin-bottom: 12rpx; }

.continue-progress { 
  margin-top: 8rpx; 
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.progress-bar {
  flex: 1;
  height: 12rpx; 
  background: rgba(255,255,255,.2); 
  border-radius: 6rpx; 
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.1);
}
.progress-fill {
  height: 100%; 
  background: linear-gradient(90deg, #fff 0%, rgba(255,255,255,0.9) 100%); 
  border-radius: 6rpx; 
  transition: width .3s ease;
  box-shadow: 0 2rpx 6rpx rgba(255,255,255,0.3);
  position: relative;
}
.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.2) 50%, transparent 100%);
  border-radius: 6rpx;
  animation: progressShine 2s ease-in-out infinite;
}
@keyframes progressShine {
  0% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
  100% { transform: translateX(100%); }
}
.progress-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #fff;
  opacity: 0.9;
}

.continue-arrow { font-size: 32rpx; opacity: .8; }

/* 进度徽章 */
.progress-badge {
  background: rgba(255,255,255,.2); color: #fff; padding: 4rpx 12rpx;
  border-radius: 999rpx; font-size: 20rpx; font-weight: 700;
}

