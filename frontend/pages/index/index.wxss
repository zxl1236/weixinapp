/* ===== 开始新学习区域 ===== */
.start-learning-section { 
  margin-bottom: 24rpx; 
}

.start-card {
  display: flex; align-items: center; gap: 20rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
