.page {
  padding: 24rpx;
  background-color: #f5f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.card,
.fail-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.grade-section {
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.grade-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.grade-text {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #333333;
}

.rebuild-btn {
  margin-top: 8rpx;
}

.info view {
  font-size: 26rpx;
  margin-bottom: 4rpx;
}

.btn-row {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.btn-row button {
  flex: 1;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.fail-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f1f5;
}

.fail-line {
  font-size: 26rpx;
  color: #333333;
}

.fail-reason {
  font-size: 24rpx;
  color: #999999;
}

.export-btn {
  margin-top: 12rpx;
}


