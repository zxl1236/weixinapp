/* ============ 企业色彩主题与基础 ============ */
.calendar-page {
  --primary: rgb(6, 65, 78);       /* 企业主色 */
  --primary-600: rgb(8, 85, 102);
  --primary-700: rgb(5, 55, 68);
  --teal: rgba(6, 65, 78, 0.8);    /* 今日高亮辅色 */
  --pink-1: rgba(6, 65, 78, 0.6);  /* 渐变色1 */
  --pink-2: rgba(8, 85, 102, 0.4); /* 渐变色2 */

  --bg-grad-start: #f7f9fc;
  --bg-grad-end: #eef2f7;

  --card-bg: rgba(255,255,255,0.9);
  --card-shadow: 0 8rpx 24rpx rgba(16,24,40,.08);

  --text-1: #0F172A;               /* 标题 */
  --text-2: #1E293B;               /* 正文 */
  --text-3: #475569;               /* 次要 */
}

/* 容器与背景 - 改为纯白色 */
.container.calendar-page {
  padding: 0 0 120rpx 0;
  background: #ffffff;
  min-height: 100vh;
}

/* 玻璃卡片通用 - 增强阴影效果 */
.glass-card {
  background: #ffffff;
  border-radius: 22rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1), 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 标题区 */
.header {
  padding: 64rpx 40rpx 36rpx;
  text-align: center;
  position: relative;
}
.glass-header {
  background: #ffffff;
  color: #333333;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1), 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
}
.title {
  color: #333333;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}
.subtitle {
  margin-top: 10rpx;
  color: #666666;
  font-size: 26rpx;
}

/* 统计卡片 */
.stats-card {
  margin: 28rpx 40rpx;
  padding: 36rpx 28rpx;
}
.stats-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-1);
  margin-bottom: 24rpx;
  display: block;
}
.stats-row {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
}
.stat-item {
  flex: 1;
  align-items: center;
  text-align: center;
}
.stat-number-group {
  display: inline-flex;
  align-items: baseline;
  margin-bottom: 6rpx;
}
.stat-number {
  font-size: 54rpx;
  font-weight: 800;
  color: var(--primary);
  line-height: 1.05;
}
.stat-unit {
  font-size: 26rpx;
  color: var(--primary);
  margin-left: 6rpx;
  transform: translateY(-4rpx);
  font-weight: 600;
}
.stat-label {
  font-size: 26rpx;
  color: var(--text-2);
  font-weight: 600;
}

/* 日历容器 */
.calendar-container {
  margin: 28rpx 40rpx;
  padding: 30rpx 28rpx;
}

/* 顶部导航与按钮 */
.month-nav {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 24rpx;
  padding-bottom: 18rpx;
  border-bottom: 2rpx solid #EEF2FF;
}
.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background-color: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
  transition: transform .12s ease;
}
.nav-btn:active { transform: scale(.94); }
.nav-icon {
  font-size: 34rpx;
  color: var(--primary);
  font-weight: 800;
  line-height: 1;
}
.month-text {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-1);
}
.btn {
  border: none;
  background: transparent;
  padding: 0;
  line-height: 1;
}
.btn-press { transform: scale(.97); opacity: .9; }   /* ✅ 按压反馈 */
.today-btn {
  padding: 16rpx 26rpx;
  background: #007AFF;
  border-radius: 999rpx;
  border: 2rpx solid #007AFF;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.4), 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
}
.today-text { font-size: 24rpx; color: #fff; font-weight: 700; }

/* 星期标题 */
.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin: 10rpx 0 16rpx;
}
.week-day {
  text-align: center;
  font-size: 26rpx;
  color: var(--text-2);
  font-weight: 700;
  padding: 8rpx 0;
}

/* 日历网格 - 优化30天布局 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  grid-row-gap: 10rpx;
  grid-column-gap: 8rpx;
  padding: 20rpx;
}
.calendar-day {
  height: 100rpx;
  position: relative;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform .12s ease, background-color .2s ease, box-shadow .2s ease;
  background: #fff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1), 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}
.calendar-day:active { transform: scale(.96); }
.day-number {
  font-size: 28rpx;
  color: #333333;
  font-weight: 700;
  z-index: 2;
}
.other-month { opacity: .6; color: var(--text-3); }

/* 今日高亮 - 优化样式 */
.today {
  background: #f0f8ff;
  border: 2rpx solid #007AFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.25), 0 2rpx 6rpx rgba(0, 122, 255, 0.1);
}
.today .day-number { color: #007AFF; }

/* 学习标记 - 优化样式 */
.has-study {
  border: 2rpx solid #007AFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2), 0 2rpx 6rpx rgba(0, 122, 255, 0.1);
}
.has-study .day-number { color: #007AFF; }

/* 热度强度 - 简化样式 */
.intensity-1 { background: #f8f9fa; }
.intensity-2 { background: #f0f8ff; }
.intensity-3 { background: #e6f3ff; }
.intensity-4 { background: #d1e7ff; }

.study-indicator {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  min-width: 34rpx;
  height: 34rpx;
  padding: 0 10rpx;
  border-radius: 999rpx;
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}
.study-count { font-size: 22rpx; color: #fff; font-weight: 800; }

/* 选中日期 */
.selected-date {
  margin-top: 22rpx;
  padding-top: 18rpx;
  border-top: 2rpx solid #EEF2FF;
  text-align: center;
}
.selected-date-text {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 700;
}

/* 复习提醒卡片 - 简化样式 */
.gradient-pink {
  background: #ffffff;
}
.review-reminder {
  margin: 28rpx 40rpx 16rpx;
  border-radius: 22rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1), 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
}
.reminder-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #333333;
  display: block;
  margin-bottom: 6rpx;
}
.reminder-subtitle {
  font-size: 26rpx;
  color: #666666;
}
.reminder-action {
  background: #007AFF;
  border-radius: 999rpx;
  padding: 18rpx 30rpx;
  box-shadow: 0 6rpx 14rpx rgba(0, 122, 255, 0.3);
}
.action-text {
  font-size: 26rpx;
  font-weight: 800;
  color: #ffffff;
}

/* 简化的学习记录卡片 */
.simple-records { 
  margin: 18rpx 40rpx 60rpx; 
}
.simple-record {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform .1s ease;
}
.simple-record:active { 
  transform: scale(.98); 
}
.simple-record:last-child { 
  margin-bottom: 0; 
}
.record-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}
.record-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
.record-arrow {
  font-size: 28rpx;
  color: #999999;
  margin-left: 12rpx;
}

/* 响应式（小屏） */
@media (max-width: 375px) {
  .stats-card, .calendar-container, .simple-records { margin-left: 28rpx; margin-right: 28rpx; }
  .stat-number { font-size: 46rpx; }
  .month-text { font-size: 32rpx; }
}