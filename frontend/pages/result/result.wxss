/* 页面背景 */
page {
  /* 使用统一的淡雅渐变背景 */
  background: linear-gradient(180deg, var(--bg-grad-start), var(--bg-grad-end));
}

/* 结果头部样式 */
.result-header {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  padding: 50rpx 30rpx;
}

.score-circle {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.score-number {
  font-size: 120rpx;
  font-weight: 700;
  line-height: 1;
}

.score-total {
  font-size: 48rpx;
  opacity: 0.8;
  margin-left: 8rpx;
}

.percentage {
  font-size: 64rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.level-info {
  margin-top: 20rpx;
}

.level-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.level-range {
  font-size: 32rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.level-description {
  font-size: 28rpx;
  opacity: 0.8;
  line-height: 1.5;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

/* 建议卡片 */
.advice-card {
  margin-bottom: 30rpx;
}

.advice-list {
  margin-top: 20rpx;
}

.advice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #4A90E2;
}

.advice-item:last-child {
  margin-bottom: 0;
}

.advice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.advice-text {
  flex: 1;
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.6;
}

/* 错题回顾 */
.mistakes-card {
  margin-bottom: 30rpx;
}

/* 正确题回顾 */
.correct-card {
  margin-bottom: 30rpx;
}

/* 可折叠标题 */
.subtitle-with-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.toggle-btn {
  display: flex;
  align-items: center;
  color: #4A90E2;
  font-size: 28rpx;
  cursor: pointer;
}

.arrow {
  margin-left: 8rpx;
  transition: transform 0.3s ease;
  color: #4A90E2;
}

.arrow.up {
  transform: rotate(180deg);
}

.arrow.down {
  transform: rotate(0deg);
}

/* 可折叠内容 */
.collapsible-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
  }
}

.mistake-item {
  background: #fff5f5;
  border: 1rpx solid #ffebee;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.mistake-item:last-child {
  margin-bottom: 0;
}

.mistake-word {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-family: 'Georgia', serif;
}

.mistake-details {
  margin-top: 12rpx;
}

.mistake-line {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.mistake-line:last-child {
  margin-bottom: 0;
}

.mistake-label {
  font-size: 26rpx;
  color: #7f8c8d;
  width: 160rpx;
  flex-shrink: 0;
}

.mistake-correct {
  font-size: 28rpx;
  color: #28a745;
  font-weight: 600;
}

.mistake-wrong {
  font-size: 28rpx;
  color: #dc3545;
  font-weight: 600;
}

.mistake-phonetic {
  font-size: 26rpx;
  color: #6c757d;
  font-style: italic;
}

/* 正确题样式 */
.correct-item {
  background: #f0f8f0;
  border: 1rpx solid #d4edda;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.correct-item:last-child {
  margin-bottom: 0;
}

.correct-word {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-family: 'Georgia', serif;
}

.correct-details {
  margin-top: 12rpx;
}

.correct-line {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.correct-line:last-child {
  margin-bottom: 0;
}

.correct-label {
  font-size: 26rpx;
  color: #7f8c8d;
  width: 160rpx;
  flex-shrink: 0;
}

.correct-answer {
  font-size: 28rpx;
  color: #28a745;
  font-weight: 600;
}

.correct-phonetic {
  font-size: 26rpx;
  color: #6c757d;
  font-style: italic;
}

/* 操作按钮 */
.actions-card {
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-buttons .btn {
  width: 100%;
  font-size: 34rpx;
  padding: 28rpx;
  font-weight: 600;
}

/* 历史对比 */
.history-comparison {
  margin-bottom: 30rpx;
}

.comparison-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.comparison-item:last-child {
  border-bottom: none;
}

.comparison-item.improvement {
  background: #f8f9fa;
  margin: 16rpx -30rpx 0;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  border-bottom: none;
}

.comparison-label {
  font-size: 30rpx;
  color: #5a6c7d;
  font-weight: 500;
}

.comparison-value {
  font-size: 32rpx;
  font-weight: 700;
}

.comparison-value.current {
  color: #4A90E2;
}

.comparison-value.previous {
  color: #7f8c8d;
}

.comparison-value.positive {
  color: #28a745;
}

.comparison-value.negative {
  color: #dc3545;
}