/* pages/progressList/progressList.wxss */

/* ===== 主题与文字层级 ===== */
:root {
  --primary: #0EA5B6;
  --primary-dark: #07414D;
  --primary-mid: #0B7285;
  --onPrimary: #ffffff;

  --text-1: #0B1F26;
  --text-2: #2B3A43;
  --text-3: #5B7280;
  --line: #E6EDF1;
  --bg: #FFFFFF;

  --success: #10B981;
  --shadow: 0 8rpx 24rpx rgba(7,65,77,.08);
}

/* ===== 页面容器 ===== */
.progress-list-page {
  background: var(--bg);
  min-height: 100vh;
}

.progress-list-container {
  padding: 24rpx 20rpx calc(env(safe-area-inset-bottom) + 120rpx);
}

/* ===== 页面头部 ===== */
.page-header {
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-1);
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-3);
  display: block;
}

/* ===== 加载状态 ===== */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-3);
}

/* ===== 阶段列表 ===== */
.stages-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.stage-section {
  background: #fff;
  border: 1rpx solid var(--line);
  border-radius: 20rpx;
  box-shadow: var(--shadow);
  overflow: hidden;
}

/* ===== 阶段头部 ===== */
.stage-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(14,165,182,0.05), rgba(7,65,77,0.02));
  border-bottom: 1rpx solid var(--line);
}

.stage-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.stage-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stage-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-1);
}

.stage-desc {
  font-size: 24rpx;
  color: var(--text-3);
}

/* ===== 年级列表 ===== */
.grades-list {
  display: flex;
  flex-direction: column;
}

.grade-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid var(--line);
  transition: background-color 0.2s ease;
}

.grade-item:last-child {
  border-bottom: none;
}

.grade-item-press {
  background: rgba(14,165,182,.06);
}

.grade-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* ===== 年级头部 ===== */
.grade-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.grade-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-1);
}

.grade-mastery-rate {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary);
}

/* ===== 年级统计 ===== */
.grade-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-3);
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-2);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: var(--line);
}

/* ===== 进度条 ===== */
.progress-bar-container {
  margin-top: 8rpx;
}

.progress-bar-bg {
  width: 100%;
  height: 8rpx;
  background: var(--line);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary), var(--primary-mid));
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* ===== 年级箭头 ===== */
.grade-arrow {
  font-size: 40rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #9aa4ae;
  border-radius: 50%;
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* ===== 空状态 ===== */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-1);
  display: block;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-3);
  display: block;
}

