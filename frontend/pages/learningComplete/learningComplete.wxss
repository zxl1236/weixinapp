/* pages/learningComplete/learningComplete.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 添加装饰性背景元素 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -30%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite reverse;
}

/* 完成动画区域 */
.completion-animation {
  text-align: center;
  margin-bottom: 60rpx;
  animation: slideInDown 0.8s ease-out;
  position: relative;
  z-index: 1;
}

.celebration-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: bounce 1s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.2));
}

.completion-title {
  font-size: 52rpx;
  font-weight: 800;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
  letter-spacing: 2rpx;
}

.completion-subtitle {
  font-size: 30rpx;
  color: rgba(255,255,255,0.95);
  line-height: 1.5;
  font-weight: 400;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 统计信息 */
.stats-section {
  background: rgba(255,255,255,0.98);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.15);
  animation: fadeInUp 0.6s ease-out 0.3s both;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, #e0e0e0, transparent);
}

.stat-number {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 12rpx;
  text-shadow: none;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.completion-time {
  text-align: center;
  font-size: 26rpx;
  color: #888;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  background: rgba(255,255,255,0.98);
  border: none;
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: fadeInUp 0.6s ease-out both;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.action-btn:nth-child(1) { animation-delay: 0.1s; }
.action-btn:nth-child(2) { animation-delay: 0.2s; }
.action-btn:nth-child(3) { animation-delay: 0.3s; }
.action-btn:nth-child(4) { animation-delay: 0.4s; }

/* 按钮悬停效果 */
.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s ease;
}

.action-btn:active::before {
  left: 100%;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary .btn-text {
  color: #fff;
}

.action-btn.primary .btn-desc {
  color: rgba(255,255,255,0.9);
}

.action-btn.secondary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.15);
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
}

.btn-icon {
  font-size: 44rpx;
  margin-right: 24rpx;
  width: 64rpx;
  text-align: center;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.1));
  flex-shrink: 0;
}

.btn-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.btn-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 6rpx;
  letter-spacing: 0.5rpx;
}

.btn-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
  font-weight: 400;
}

/* 底部导航 */
.bottom-nav {
  margin-top: 50rpx;
  animation: fadeInUp 0.6s ease-out 0.5s both;
  position: relative;
  z-index: 1;
}

.nav-btn {
  background: rgba(255,255,255,0.25);
  border: 2rpx solid rgba(255,255,255,0.4);
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.nav-btn:active {
  background: rgba(255,255,255,0.35);
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
}

.nav-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

.nav-text {
  font-size: 30rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 动画效果 */
@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 升级提示区域 */
