.container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
  /* ‰ºÅ‰∏öËâ≤ÂΩ©Ê∏êÂèòËÉåÊôØ */
  background: linear-gradient(135deg, 
    rgba(6, 65, 78, 0.08) 0%, 
    rgba(8, 85, 102, 0.05) 25%,
    rgba(6, 65, 78, 0.06) 50%,
    rgba(8, 85, 102, 0.07) 75%,
    rgba(6, 65, 78, 0.04) 100%
  );
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(6, 65, 78, 0.12) 0%, transparent 60%),
    radial-gradient(circle at 80% 20%, rgba(8, 85, 102, 0.08) 0%, transparent 60%),
    radial-gradient(circle at 40% 40%, rgba(6, 65, 78, 0.06) 0%, transparent 60%);
  z-index: -1;
  animation: float-bg 20s ease-in-out infinite;
}

@keyframes float-bg {
  0%, 100% { opacity: 0.8; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
}



/* Á≤æÁÆÄÂ§¥ÈÉ® */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
  padding: 0 8rpx;
}

.back-btn {
  background: transparent;
  color: var(--text-secondary);
  border: none;
  padding: 16rpx;
  border-radius: var(--radius-medium);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.back-btn:active {
  color: var(--text-primary);
  background: rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  flex: 1;
}

/* Ê†∏ÂøÉÊï∞ÊçÆÂ±ïÁ§∫ */
.core-stats {
  margin-bottom: 48rpx;
}

.mastery-display {
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.9) 0%, 
    rgba(16, 163, 127, 0.06) 50%,
    rgba(255, 255, 255, 0.85) 100%
  );
  border: 2rpx solid rgba(16, 163, 127, 0.25);
  border-radius: var(--radius-xlarge);
  padding: 50rpx 40rpx;
  text-align: center;
  box-shadow: 
    0 16rpx 48rpx rgba(16, 163, 127, 0.12),
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
}

.mastery-display::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, 
    var(--primary-color) 0%, 
    #0ea5e9 25%,
    var(--secondary-color) 50%, 
    #f97316 75%,
    var(--accent-color) 100%
  );
  box-shadow: 0 4rpx 16rpx rgba(16, 163, 127, 0.5);
  animation: rainbow-flow 4s ease-in-out infinite;
}

@keyframes rainbow-flow {
  0%, 100% { filter: hue-rotate(0deg) saturate(1); }
  50% { filter: hue-rotate(30deg) saturate(1.2); }
}

/* ÁéØÂΩ¢ËøõÂ∫¶Âõæ */
.ring-chart {
  margin-bottom: 40rpx;
}

.ring-container {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  margin: 0 auto;
}

.ring-progress {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(
    from 0deg,
    var(--primary-color) 0%,
    var(--primary-color) var(--progress),
    rgba(229, 231, 235, 0.2) var(--progress),
    rgba(229, 231, 235, 0.2) 100%
  );
  animation: ring-rotate 2s ease-in-out;
}

.ring-progress::before {
  content: '';
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  background: var(--card-bg);
  border-radius: 50%;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

@keyframes ring-rotate {
  from {
    transform: rotate(-90deg);
    opacity: 0;
  }
  to {
    transform: rotate(-90deg);
    opacity: 1;
  }
}

.ring-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.mastery-percent {
  font-size: 64rpx;
  font-weight: 900;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  letter-spacing: -2rpx;
  text-shadow: 0 2rpx 4rpx rgba(16, 163, 127, 0.2);
}

.mastery-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

/* ÁªüËÆ°‰ø°ÊÅØ */
.stats-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(16, 163, 127, 0.05);
  border-radius: var(--radius-large);
  padding: 24rpx 32rpx;
  margin-top: 32rpx;
}

.total-words, .mastered-count {
