.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

/* 头部区域 */
.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #666666;
}

/* 表单区域 */
.login-form {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ff4757;
  margin-left: 4rpx;
}

/* 头像选择 */
.avatar-button {
  width: 100%;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.avatar-button::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  border: 4rpx solid #e5e7eb;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.avatar-icon {
  font-size: 80rpx;
  color: #9ca3af;
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 3rpx solid #ffffff;
}

/* 昵称输入 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.input-tip {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-top: 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.login-button.disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.login-button.disabled:active {
  transform: none;
}

/* 提示信息 */
.login-tip {
  text-align: center;
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

